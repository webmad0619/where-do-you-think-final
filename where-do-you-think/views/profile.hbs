<header>
  <h2>Profile of {{username}}</h2>
</header>

<form action="/update-profile" method="POST">
  <span>{{username}}</span>

  <input type="text" name="password-old" placeholder="old password">
  <input type="text" name="password-new" placeholder="new password">

  <span>Created at: {{created_at}}</span>

  {{#if errorMessage}}
  <span class="error-message"><i class="fas fa-exclamation-triangle"></i> {{errorMessage}}</span>
  {{/if}}

  {{#if okMessage}}
  <span class="ok-message"><i class="fas fa-check-circle"></i> {{okMessage}}</span>
  {{/if}}

  <input type="submit" value="Update password">
</form>